import java.util.Scanner;

public class CestrianInsurance {
      public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("Select vehicle type2:");
        System.out.println("1. Car");
        System.out.println("2. Motorcycle");
        
        int vehicleChoice = scanner.nextInt();
        
        System.out.println("Select age:");
        System.out.println("1. equalAndAbove 25");
        System.out.println("2. under 25");
        
        int ageChoice = scanner.nextInt();
        
        
        System.out.println("ENTER THE NUMBER OF PENALITY POINT");
        int penaltyPoint = scanner.nextInt();
        
        double totalPremiumPayable = 0;
        
        switch (vehicleChoice) {
            case 1: // car
                System.out.println("You selected car.");
                switch (ageChoice) {
                    case 1: totalPremiumPayable = 305; break;
                    case 2: totalPremiumPayable = 305 + 0.3*305; break;
                    default: System.out.println("Invalid age choice.");
                }
                break;
                
            case 2: // Motorcycle
                System.out.println("You selected Motorcycle.");
                switch (ageChoice) {
                    case 1: totalPremiumPayable = 360; break;
                    case 2: totalPremiumPayable = 360 + 360*0.3; break;
                    default: System.out.println("Invalid age choice.");
                }
                break;
                
            default:
                System.out.println("Invalid vehicletype selection.");
        }
        

        if (penaltyPoint > 6) {
            totalPremiumPayable += 100;
        }
        
        
        if (totalPremiumPayable > 0) {
        
            System.out.println("Your total premiun payable is: $" + totalPremiumPayable);
        } else {
            System.out.println("price not shown due to invalid input.");
        }
        
        scanner.close();
    }
}
